{
  "Jwt": {
    "Key": "{JWT_KEY}",
    "Issuer": "{JWT_ISSUER}",
    "Audience": "{JWT_AUDIENCE}"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "AiLearnerConnection": "Server=${DB_SERVER};Initial Catalog=${DB_NAME};Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;Authentication=\"Active Directory Default\";"
  },

  "OpenAI": {
    "ApiKey": "{OPENAI_APIKEY}"
  }
}
